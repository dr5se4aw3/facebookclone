<%= form_with(model: feed, local: true, url: confirm_feeds_path) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new_feed_container">
    <p>本文：</p>
    <p><%= form.text_area :content, size: "80x10" %></p>
    <p>写真：</p>
    <p><%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %></p>
    <%= form.hidden_field :image_cache %>
    <%= form.hidden_field :user_id %>
    <div class="actions">
      <%= form.submit "投稿する" %>
    </div>
  </div>
<% end %>
