
<h1>投稿写真一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= feed.image %></td>
        <td><%= link_to '詳細を確認する', feed %></td>
        <td><%= link_to '投稿を編集する', edit_feed_path(feed) %></td>
        <td><%= link_to '投稿を削除する', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_feed_path %>
